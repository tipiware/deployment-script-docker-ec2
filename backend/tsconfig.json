
{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "./build/",
    "module": "commonjs",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "rootDirs": ["./src"],
    "typeRoots": ["./src/types"]
  },
  "files": [
    "src/index.ts",
    "src/types/extensions.d.ts"
  ],
  "include": ["src/**/*"]
}